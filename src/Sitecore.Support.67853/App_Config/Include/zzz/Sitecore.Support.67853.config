<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:x="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <settings>
      <!-- POSTED FILES LIMIT
           Sets max size of posted files  -->
      <setting name="WFM.PostedFilesLimit" value="1024KB" patch:after="*[@name='WFM.InitialValuesCacheSize']" />
    </settings>

    <wffm>
      <formProcessors>
        <processor type="Sitecore.Support.Forms.Mvc.Processors.SitecoreFormProcessor, Sitecore.Support.67853" patch:instead="*[@type='Sitecore.Forms.Mvc.Processors.SitecoreFormProcessor, Sitecore.Forms.Mvc']" />
      </formProcessors>
    </wffm>
  </sitecore>
</configuration>